<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.lifestyle.ReadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seaGreen"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/date"
            style="@style/SmallBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09th June'20" />

        <TextView
            android:id="@+id/title"
            style="@style/NormalHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="6 Rules for an Ayurvedic Diet"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="32dp">

            <TextView
                style="@style/NormalBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/large_text" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/article_img" />

            <TextView
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Photo from: 'Eat Well, Be Well: Ayurveda Cooking for Healthy Living'"
                android:textColor="@color/lightGrey" />

            <TextView
                style="@style/NormalBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/large_text2" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>